<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UASPPB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mainColor</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/p_regular</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorPrimary">@color/mainProgress</item>
        <item name="colorAccent">@color/secondaryProgress</item>
    </style>

    <style name="SearView.Custom" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingBottom">0.5dp</item>
    </style>

</resources>